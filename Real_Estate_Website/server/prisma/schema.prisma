
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url = env("DATABASE_URL")
    
}

model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String?
    email String @unique
    password String @unique
    role String
    bookedVisits Json[]
    favPropertiesID String[] @db.ObjectId
}

model Broker {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String?
    email String @unique
    password String @unique
    role String
    bookedVisits Json[]
    PropertiesResponsible Properties[] @relation("Responsible")
    propertyOffers Json[]
}

model Admin {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  email String @unique
  password String @unique
  role String
}

model Properties{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    title String
    description String
    price Int
    address String
    city String 
    country String
    image String
    facilities Json
    brokerEmail String
    responsible Broker @relation("Responsible", fields: [brokerEmail], references: [email])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique(fields: [address, brokerEmail])
}

model PropertyOffer {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  propertyId      String
  brokerName      String
  licenseNumber   String
  agency          String
  firstName       String
  email           String
  buyerAddress    String
  immovableAddress String
  budget          String 
  message         String
  createdAt       DateTime @default(now())
}

