
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url = env("DATABASE_URL")
    
}

model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String?
    email String @unique
    bookedVisits Json[]
    favPropertiesID String[] @db.ObjectId

}

model Broker {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String?
    email String @unique
    PropertiesResponsible Properties[] @relation("Responsible")
}

model Properties{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    title String
    description String
    price Int
    address String
    city String 
    country String
    image String
    facilities Json
    brokerEmail String
    responsible Broker @relation("Responsible", fields: [brokerEmail], references: [email])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique(fields: [address, brokerEmail])
}

model PropertyOffers{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    brokerName String
    licenseNumber Int
    agency String
    firstName String
    email String
    buyerAddress String
    immovableAddress String
    budget Int
    message String
}